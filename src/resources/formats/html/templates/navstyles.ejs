<style type="text/css">
  .navbar-brand>img {
    max-height: 24px;
    width: auto;
    padding-right: 6px;
  }

  :target::before {
    content: "";
    display: block;
    height: <%=height %>px;
    margin: -<%=height %>px 0 0;
  }

  body {
    padding-top: <%=height %>px;
  }

  nav .nav-link i,
  nav .dropdown-item i {
    padding-right: 1px;
  }

  .sidebar {
    position: sticky;
    max-height: calc(100vh - <%=height %>px);
    top: <%=height %>px;
    overflow-y: auto;
    max-width: 15rem;
  }

  .sidebar-navigation {
    padding-left: 20px;
  }

  .sidebar-navigation,
  .sidebar-navigation button {
    font-size: 1em;
  }

  .sidebar-navigation a {
    color: inherit;
  }

  .sidebar-navigation .active {
    color: inherit;
    color: var(--bs-primary) !important;
  }

  .sidebar-logo {
    max-width: 150px;
    padding-bottom: .5rem;
  }

  .sidebar-navigation li a {
    text-decoration: none;
  }

  .sidebar-navigation .sidebar-tool {
    opacity: 0.8;
    font-size: 1.2em;
  }

  .sidebar-navigation .sidebar-tool.dropdown-toggle::after {
    display: none;
  }

  .quarto-btn-toggle[aria-expanded=false] .bi-arrows-collapse {
    display: none;
  }

  .quarto-btn-toggle[aria-expanded=true] .bi-arrows-expand {
    display: none;
  }

  .quarto-secondary-nav {
    margin-top: -4px;
  }

  .quarto-secondary-nav-title {
    padding-top: 4px;
    margin-bottom: -4px;
  }

  @media (max-width: 991.98px) {
    .sidebar-logo {
      display: none;
    }

    .sidebar.sidebar-navigation {
      position: static;
      border-top: 1px solid rgba(120, 120, 120, 0.3);
      border-bottom: 1px solid rgba(120, 120, 120, 0.3);
    }

    .sidebar.sidebar-navigation nav {
      padding-top: .5em !important;
      padding-bottom: .5em;
    }

  }

  @media (min-width: 992px) {
    .sidebar.sidebar-navigation {
      height: 100vh;
      display: block;
      position: sticky;
    }

    .sidebar.sidebar-navigation nav {
      height: 100vh;
      min-width: 15em;
    }
  }

  .sidebar nav .dropdown-menu .dropdown-item .bi::before {
    width: 1em;
  }

  .sidebar-section button .bi-chevron-right::before {
    transform: rotate(90deg);
  }

  .sidebar-section button.collapsed .bi-chevron-right::before {
    transform: none;
  }

  .sidebar-section .bi-chevron-right::before {
    transition: transform 0.20s ease;
  }
</style>
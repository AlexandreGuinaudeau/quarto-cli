

<% if (item.href) { %>
  <li class="nav-item">
    <a class="nav-link" href="<%- item.href %>"><% partial('navicon.ejs', { item }) %> <%- item.text %></a>
  </li>  
<% } else if (item.menu) { %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="<%- item.id %>" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <% partial('navicon.ejs', { item }) %> <%- item.text %>
    </a>
    <ul class="dropdown-menu" aria-labelledby="<%- item.id %>">    
      <% for(const menuItem of item.menu) { %>
        <% partial('navitem.ejs', { item: menuItem }) %>
      <% } %>
    </ul>
  </li>
<% } else if (item.text) { %>
  <% if (item.text.match(/^\-+$/)) { %>
    <li><hr class="dropdown-divider"></li>
  <% } else { %>
    <li class="dropdown-header"><% partial('navicon.ejs', { item }) %> <%- item.text %></li>
  <% } %>
<% } %>

